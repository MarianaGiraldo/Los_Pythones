@page
@model FactuSys.App.Frontend.Pages.EditEmpleadosModel
@{
}
<div class="container">
    <center><img class="mb-4" src="~/images/logo.jpeg" alt="" width="400" height="96"></center>
    <center>
        <h1>Edición Empleado: <p></p>@Model.Empleado.Nombre @Model.Empleado.Apellidos</h1>
    </center>
    <div class="row">
        <div class="col">
            <div class="shadow-lg p-3 mb-5 mt-4 bg-light rounded">
                <form class="row g-3" method="POST">
                    <input type="hidden" asp-for="Empleado.EmpleadoID"/>
                    <div class="form-group col-md-3 position-relative my-3 mx-1">
                        <label asp-for="Empleado.Nombre"></label>
                        <input asp-for="Empleado.Nombre" class="form-control">
                        <span class="text-danger" asp-validation-for="Empleado.Nombre"></span>
                    </div>
                    
                    <div class="form-group col-md-3 position-relative my-3 mx-1">
                            <label asp-for="Empleado.Apellidos"></label>
                            <input asp-for="Empleado.Apellidos" class="form-control">
                            <span class="text-danger" asp-validation-for="Empleado.Apellidos"></span>
                    </div>
                        
                    <div class="form-group col-md-4 position-relative my-3 mx-1">
                            <label asp-for="Empleado.Telefono"></label>
                            <input asp-for="Empleado.Telefono" class="form-control" type="tel" placeholder="Teléfono fijo - Celular">
                            <span class="text-danger" asp-validation-for="Empleado.Telefono"></span>
                    </div>

                    <div class="form-group col-md-4 position-relative my-3 mx-1">
                            <label asp-for="Empleado.Email"></label>
                            <input asp-for="Empleado.Email" class="form-control" type="email" placeholder="ejemplo@factusys.com">
                            <span class="text-danger" asp-validation-for="Empleado.Email"></span>
                    </div>

                     <div class="form-group col-md-3 position-relative my-3 mx-1">
                            <label asp-for="Empleado.Contrasena"></label>
                            <input asp-for="Empleado.Contrasena" class="form-control" type="text" placeholder= "May-Min-Núm-Incluye: - _" 
                            pattern="[A-Za-z0-9_-]{8,12}">
                            <span class="text-danger" asp-validation-for="Empleado.Contrasena"></span>
                    </div>
                    <br> <br>
                    <button type="submit" class="btn btn-primary d-grid gap-2 col-5 h-50 m-auto">Actualizar</button>
                    <br> 
                    <p>
                    <a asp-page="./List" class="btn-default">Lista de Empleados </a>
                </form>

            </div>
        </div>
    </div>
</div>

