@page
@model FactuSys.App.Frontend.Pages.ListClientesModel
@{
}

<h1>Listado de Clientes</h1>
<form method="get">
    <div class="form-group">

        <p>
            Email: <input type="text" name="filtroBusqueda" asp-for="FiltroBusqueda" />
            <input type="submit" value="Filtrar" />
        </p>
</form>
<table class="table">
    <tr>
        <th>Nombre</th>
        <th>Apellidos</th>
        <th>Teléfono</th>
        <th>Email</th>
        <th>Detalles</th>
        <th>Editar</th>
    </tr>
    @foreach (var cliente in Model.Clientes)
    {
    <tr>
        <td>@cliente.Nombre</td>
        <td>@cliente.Apellidos</td>
        <td>@cliente.Telefono</td>
        <td>@cliente.Email</td>
        <td>
            <a class="btn btn-primary table-btn" asp-page="./Details" asp-route-clienteId="@cliente.Id">
                <i class="fas fa-info-circle fa-lg"></i </a> </td> <td>
                <a class="btn btn-primary table-btn" asp-page="./Edit" asp-route-clienteId="@cliente.Id">
                    <i class="fas fa-address-book fa-lg" aria-hidden="true"></i>
                </a>
        </td>

    </tr>
    }
</table>

<a asp-page=".\Create" class="btn btn-primary">Adicionar cliente</a>